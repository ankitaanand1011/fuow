<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textColorHint">#6e6e6e</item>
        <item name="android:textSize">12sp</item>
        //added attributes
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:textSize">12sp</item>
        <item name="colorControlNormal">@color/grey_text</item>

        //added attributes
        <item name="colorControlActivated">@color/grey_text</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorHighlight">@color/grey_text</item>



    </style>

</resources>
