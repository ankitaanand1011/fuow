<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@mipmap/back"
            android:layout_marginRight="10sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY BUSINESS BRIEFING"
            android:tint="@color/white"
            android:padding="10sp"
            android:textStyle="bold" />



    </RelativeLayout>
    <ScrollView
        android:id="@+id/sv_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:scrollbars="none"
        >
    <LinearLayout
        android:id="@+id/ll_details"
        android:layout_below="@+id/rl_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginTop="10dp"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"


        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:padding="10sp"
            android:textStyle="bold" />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_requirement_list"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey"

        >
        <TextView
            android:id="@+id/tv_title_offering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:padding="10sp"
            android:textStyle="bold" />



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_offering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/grey"

            >
            <TextView
                android:id="@+id/tv_title_need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:padding="10sp"
                android:textStyle="bold" />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_need"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_need"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >


            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                 android:textColor="@color/white"
                android:background="@color/light_green_new"
                android:gravity="center"
                android:padding="10dp"

                />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
