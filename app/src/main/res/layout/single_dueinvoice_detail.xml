<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Screen.HomeScreen">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/grey_dashboard"

        >

        <TextView
            android:id="@+id/tv_invoice_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Invoice ID : "
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_invoice_id_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/tv_invoice_id"
            />




        <RelativeLayout
            android:id="@+id/rl_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Order # : "
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/tv_order_id_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/tv_order_id"
                />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_proposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/rl_text_manage_proposal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>



            </RelativeLayout>


            <LinearLayout
                android:id="@+id/rl_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_top">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="1.1"
                    android:textSize="12sp"
                    android:text="Date :"
                    android:textColor="@color/dark_grey"

                    />
                <TextView
                    android:id="@+id/tv_date_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="0.9"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_date">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_weight="1.5"
                    android:textSize="12sp"
                    android:text="Total :"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/dark_grey"

                    />
                <TextView
                    android:id="@+id/tv_total_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="12sp"
                    android:layout_weight="1.3"
                    android:text="Balance :"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/dark_grey"
                    />
                <TextView
                    android:id="@+id/tv_balance_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_below="@+id/ll_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="Payment Status :"
                    android:textColor="@color/dark_grey"
                    />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rl_text_manage_proposal">

            <TextView
                android:id="@+id/pay_invoice"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_bg_tv"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="Pay Invoice"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/print"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange_dashboard"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:gravity="center"
                android:text="Print"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_green_dashboard"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:gravity="center"
                android:text="Download PDF"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/pay_invoice"
                android:textColor="@color/white"
                android:textSize="12sp"/>




        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>
