<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@mipmap/back"
            android:layout_marginRight="10sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="MY TO-DO LIST"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"

                android:paddingEnd="10dp">


                <TextView
                    android:id="@+id/completed"
                    android:text="COMPLETED"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_yellow_dashboard"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/completed"
                    android:text="PENDING"
                    android:textSize="14sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginStart="10dp"

                    android:background="@drawable/button_grey_dashboard"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />




            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="vertical"

            >
            <LinearLayout
                android:id="@+id/ll_manage"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:padding="15dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            app:cpb_background_progressbar_color="@color/red"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progressbar_color="#F44336"
                            app:cpb_progressbar_width="10dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/dark_voilet"
                        >

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALL(43)"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/dark_voilet"

                            />

                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/total"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:text="141"
                            android:layout_marginTop="5dp"

                            />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            app:cpb_background_progressbar_color="@color/green"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progressbar_color="#F44336"
                            app:cpb_progressbar_width="10dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/dark_voilet"
                        >

                        <TextView
                            android:id="@+id/used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="COMPLETED(24)"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/dark_voilet"

                            />

                        <TextView
                            android:id="@+id/tv_used"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/used"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:text="108"
                            android:layout_marginTop="5dp"

                            />


                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.mikhaellopez.circularprogressbar.CircularProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            app:cpb_background_progressbar_color="@color/colorPrimary"
                            app:cpb_background_progressbar_width="5dp"
                            app:cpb_progressbar_color="#F44336"
                            app:cpb_progressbar_width="10dp"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/dark_voilet"
                        >

                        <TextView
                            android:id="@+id/balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PENDING(19)"
                            android:textSize="10dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/dark_voilet"

                            />

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/balance"
                            android:textStyle="bold"
                            android:text="33"
                            android:textSize="10dp"
                            android:layout_marginTop="5dp"

                            />


                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_to_do"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>

    </LinearLayout>









</LinearLayout>
