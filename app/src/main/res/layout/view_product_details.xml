<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        >

        <ImageView
            android:id="@+id/header_image"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo_white"
            android:layout_centerInParent="true"

            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:src="@mipmap/back"
            android:layout_marginRight="10sp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:contentDescription="@string/app_name"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="PRODUCT / SERVICES"/>



        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"


            >



            <RelativeLayout
                android:id="@+id/rl_proposal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <LinearLayout
                    android:id="@+id/rl_text_manage_proposal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/rl_eclipse_manage_proposal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <RelativeLayout
                        android:id="@+id/rl_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/tv_cat_val"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:textColor="@color/dark_grey"

                            />


                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_type_transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="STATUS:"
                            android:textColor="@color/dark_grey"

                            />

                        <TextView
                            android:id="@+id/tv_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:layout_toEndOf="@+id/tv_type_transaction"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"

                            />

                        <TextView
                            android:id="@+id/tv_commission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="COMMISSION %:"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/tv_status"
                            android:textColor="@color/dark_grey"

                            />

                        <TextView
                            android:id="@+id/tv_commission_value_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:layout_toEndOf="@+id/tv_commission"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"


                            />



                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_red_dashboard"
                        android:layout_gravity="start"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>



                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rl_eclipse_manage_proposal"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                   >

                    <RelativeLayout
                        android:id="@+id/rl_edit"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_orange_dashboard"


                        >
                        <TextView
                            android:id="@+id/tv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="EDIT"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>


                    </RelativeLayout>
                    <RelativeLayout

                        android:id="@+id/rl_pdf_export"
                        android:layout_below="@+id/rl_edit"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_yellow_dashboard"
                        android:layout_marginTop="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="PDF EXPORT"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>


                    </RelativeLayout>
                    <RelativeLayout

                        android:layout_below="@+id/rl_pdf_export"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_green_dashboard"
                        android:layout_marginTop="5dp"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            android:gravity="center"
                            android:text="BUY"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>


                    </RelativeLayout>




                </RelativeLayout>

            </RelativeLayout>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <TextView
                android:id="@+id/tv_asd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="DESCRIPTION :"

                android:textColor="@color/white"
                android:background="@color/grey_dashboard"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="DESCRIPTION :"
                android:layout_below="@+id/tv_asd"
                android:textColor="@color/dark_grey"
                />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <TextView
                android:id="@+id/tv_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="IMAGES :"

                android:textColor="@color/white"
                android:background="@color/grey_dashboard"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_below="@+id/tv_img"

                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_manage_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
            </RelativeLayout>



        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
