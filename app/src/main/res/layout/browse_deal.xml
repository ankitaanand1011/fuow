<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            >

            <ImageView

                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_white"
                android:layout_centerInParent="true"

                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/search32"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/back_img"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:src="@mipmap/back"
                android:layout_marginRight="10sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:contentDescription="@string/app_name"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/white"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_margin="10sp"
                android:id="@+id/textView" />





        </RelativeLayout>

        <ListView
            android:id="@+id/list_deals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_search"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg_black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            >

            <ImageView
                android:id="@+id/header_image"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_white"
                android:layout_centerInParent="true"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/close24"
                android:tint="@color/white"
                android:layout_marginRight="10sp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:contentDescription="@string/app_name"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/location"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:backgroundTint="@color/grey_text"
                            android:textColorHint="@color/grey_text"
                            android:hint="Search with Location"
                            android:textColor="@color/black"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/name"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:backgroundTint="@color/grey_text"
                            android:textColorHint="@color/grey_text"
                            android:textColor="@color/black"
                            android:hint="Search with Name" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/description"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:backgroundTint="@color/grey_text"
                            android:textColorHint="@color/grey_text"
                            android:hint="Search with Description"
                            android:textColor="@color/black"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/category"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:backgroundTint="@color/grey_text"
                            android:textColorHint="@color/grey_text"
                            android:textColor="@color/black"
                            android:hint="Search with Category" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/keyword"
                        android:layout_weight="1"
                        android:layout_marginEnd="5dp"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/input_keyword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:hint="Search with Keyword"
                            android:textColor="@color/black"/>

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_marginStart="5dp"
                        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:backgroundTint="@color/grey_text"
                            android:textColorHint="@color/grey_text"
                            android:textColor="@color/black"
                            android:hint="Search with Category" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Price Range"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="From"

                    />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/grey_text"
                    android:textColorHint="@color/grey_text"
                    android:layout_marginStart="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:text="To"

                    />

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColorHint="@color/grey_text"
                    android:backgroundTint="@color/grey_text"
                    android:textColor="@color/black"

                    android:layout_marginStart="10dp"

                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text="Seller Level"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@color/white">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Grade One"
                        android:layout_weight="1"
                        android:textColor="@color/grey_text"
                        android:layout_gravity="center_vertical"
                        android:buttonTint="@color/grey_text"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Grade Two"
                        android:layout_weight="1"
                        android:textColor="@color/grey_text"
                        android:layout_gravity="center_vertical"
                        android:buttonTint="@color/grey_text"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" Grade Three"
                        android:layout_weight="1"
                        android:textColor="@color/grey_text"
                        android:layout_gravity="center_vertical"
                        android:buttonTint="@color/grey_text"
                        />


                </RadioGroup>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_d_blue_dashboard"
                    android:text="SEARCH"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
